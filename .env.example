# --- GCP Configuration ---
GCP_PROJECT_ID="your-gcp-project-id"
GCP_REGION="your-gcp-region"
RUNTIME_SERVICE_ACCOUNT="your-runtime-service-account"

# --- Cloud SQL Connection ---
CLOUD_SQL_CONNECTION_NAME="your-gcp-project:your-region:your-instance-name"
CLOUD_SQL_USER="your-db-user"
CLOUD_SQL_PASSWORD="your-db-password"
CLOUD_SQL_DATABASE_NAME="your-db-name"
PRIVATE_IP="False"
DB_ENABLE_IAM_AUTH="False"

# --- Gemini API Key ---
LLM_API_KEY="your_google_gemini_api_key"

# --- Google OAuth for Streamlit ---
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# --- Email Configuration (for sending newsletters via newsletter_sender.py) ---
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="465"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-email-password"
NEWSLETTER_SENDER="The Opportunity Architect <your-email@gmail.com>"

# --- Backend Internal API Key ---
INTERNAL_API_KEY="an_internal_api_key"

# --- Backend Subscription Secret Key ---
SUBSCRIPTION_SECRET_KEY="a_subscription_secret_key"

# --- Streamlit Frontend App URL ---
STREAMLIT_APP_URL="https://<your-service-name>-<your-project-id>.<your-region>.run.app"
